<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
            <ul class="nav nav-sidebar">
                <li class="active"><a href="/dashboard">Dashboard<span class="sr-only">(current)</span></a></li>
                <li><a href="/playerprofiles">Player Profiles</a></li>
                <li><a href="/availability">Availability</a></li>
                <li><a href="/practicespaces">Practice Spaces</a></li>
                <li><a href="/sessions">Start a Session</a></li>
            </ul>
            <ul class="nav nav-sidebar">
                <li><a href="/about">About JamPlan</a></li>
            </ul>
        </div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
            <h1 class="page-header">Dashboard</h1>

            <h2 class="sub-header">Upcoming Sessions</h2>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Session Description</th>
                        <th>Start Time</th>
                        <th>End Time</th>
                        <th>Location</th>
                    </tr>
                    </thead>
                    <tbody id="sessions">

                    </tbody>
                </table>
            </div>

            <h2 class="sub-header">Current Player Profiles</h2>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Instrument</th>
                        <th>Years of Experience</th>
                        <th>Equipment Quality</th>
                        <th>Favorite Genres</th>
                    </tr>
                    </thead>
                    <tbody id="profiles">

                    </tbody>
                </table>
            </div>

            <h2 class="sub-header">Current Availability</h2>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>From</th>
                        <th>Through</th>
                    </tr>
                    </thead>
                    <tbody id="availability">

                    </tbody>
                </table>
            </div>

            <h2 class="sub-header">My Practice Spaces</h2>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Address</th>
                        <th>Max Occupants</th>
                        <th>Description</th>
                    </tr>
                    </thead>
                    <tbody id="practiceSpaces">

                    </tbody>
                </table>
            </div>
            <footer class="footer">
                <div class="container">
                    <p class="text-muted text-center">Copyright Justin Guarino 2016</p>
                </div>
            </footer>

        </div>
    </div>
